yarn.lock
pnpm-lock.yaml

# Environment variables
.env
.env.local
.env.*.local
*.env

# OS generated files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db
Desktop.ini

# Editor directories and files
.vscode/
!.vscode/extensions.json
!.vscode/settings.json
.idea/
*.swp
*.swo
*~
.project
.classpath
.settings/
*.sublime-project
*.sublime-workspace

# Logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*
lerna-debug.log*

# Build outputs
dist/
build/
out/
*.tsbuildinfo

# Temporary files
tmp/
temp/
*.tmp
*.temp

# Coverage directory used by tools like istanbul
coverage/
*.lcov
.nyc_output/

# Dependency directories
jspm_packages/

# Optional npm cache directory
.npm

# Optional eslint cache
.eslintcache

# Optional REPL history
.node_repl_history

# Output of 'npm pack'
*.tgz

# Yarn Integrity file
.yarn-integrity

# parcel-bundler cache
.cache
.parcel-cache

# Next.js
.next/

# Nuxt.js
.nuxt/
.output/

# Vite
.vite/

# TypeScript
*.tsbuildinfo

# Testing
.coverage/
.pytest_cache/
.tox/

# Misc
*.bak
*.backup
*.old
*.orig

# ============================================================================
# Rails / Backend
# ============================================================================
# Backend logs and tempfiles
backend/log/*
!backend/log/.keep
backend/tmp/*
!backend/tmp/.keep
backend/tmp/cache/bootsnap*
backend/tmp/pids/*
!backend/tmp/pids/.keep
backend/tmp/storage/*
!backend/tmp/storage/.keep

# Backend credentials
backend/config/master.key
backend/config/credentials/*.key
backend/config/credentials/*.key.yml

# Backend storage
backend/storage/*
!backend/storage/.keep

# Backend dependencies
backend/.bundle
backend/vendor/bundle
backend/vendor/cache

# Backend coverage
backend/coverage/
backend/spec/tmp/

# Backend precompiled assets
backend/public/assets
backend/public/packs
backend/public/packs-test
backend/public/system
backend/public/uploads

# Kamal deployment
backend/.kamal/

